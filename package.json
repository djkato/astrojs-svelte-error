{
    "name": "kremik-sk",
    "type": "module",
    "version": "1.1.0",
    "scripts": {
        "dev": "astro dev",
        "format": "prettierd --write --plugin prettier-plugin-svelte .",
        "start": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro"
    },
    "dependencies": {
        "@astrojs/check": "^0.9.4",
        "@astrojs/node": "^8.3.4",
        "@astrojs/svelte": "^6.0.1",
        "@astrojs/tailwind": "^5.1.2",
        "astro": "^4.16.13",
        "astro-feather": "^1.0.0",
        "astro-seo": "^0.8.4",
        "editorjs-html": "^3.4.3",
        "svelte": "^5.1.9",
        "svelte-feather-icons": "^4.1.0",
        "svelte-inview": "^4.0.4",
        "tailwindcss": "^3.4.14"
    },
    "devDependencies": {
        "prettier": "^3.3.3",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-svelte": "^3.2.7",
        "prettier-plugin-tailwindcss": "^0.6.8",
        "typescript": "^5.6.3"
    },
    "overrides": {
        "@sveltejs/vite-plugin-svelte": "^4.0.0-next.6"
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "singleQuote": false,
        "trailingComma": "none",
        "bracketSpacing": true,
        "semi": false,
        "bracketSameLine": true,
        "arrowParens": "avoid",
        "printWidth": 250,
        "proseWrap": "always",
        "singleAttributePerLine": false,
        "astroAllowShorthand": true,
        "plugins": [
            "prettier-plugin-svelte",
            "prettier-plugin-astro"
        ],
        "overrides": [
            {
                "files": "*.astro",
                "options": {
                    "parser": "astro"
                }
            },
            {
                "files": "*.svelte",
                "options": {
                    "parser": "svelte"
                }
            }
        ]
    }
}
